{% extends "/template/main.twig" %}

{% block title %}{{ username }}{% endblock %}

{% block page %}
<div class="row m-0 w-100 h-100">
  <div class="col-md-4 h-100 mh-100 mb-3">
    <div class="bg-dark p-4 h-100 mh-100 d-flex flex-column align-items-center rounded">
      <div class="d-flex flex-row w-100 mb-4">
        <h1 class="mx-auto mb-0 overflow-hidden">{{ username }}</h1>
        <a class="btn btn-danger d-flex justify-content-center align-items-center ml-2" href="/logout">
          <img class="mini-icon" src="img/logout.svg" alt="LOGOUT">
        </a>
      </div>

      <div class="d-flex flex-row w-100 mb-2">
        <form action="/search" class="d-flex flex-row mb-2 mx-auto overflow-hidden" method="post">
          <input class="form-control overflow-auto round-border-left" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-info d-flex justify-content-center align-items-center round-border-right" type="submit"><img class="mini-icon" src="img/search.svg" alt="SEARCH"></button>
        </form>
        <div id="addButton" class="btn btn-success d-flex justify-content-center align-items-center mb-2 ml-2">
          <img class="mini-icon" src="img/add.svg" alt="ADD">
        </div>
      </div>

      <div id="tasksList" class="list-group w-100 overflow-auto mb-2 list-color">
        {% for task in tasks %}
        <div id="{{ task.id }}" class="list-group-item list-group-item-action list-color task-el d-flex justify-content-between align-items-center">
          {{ task.title }}
          {# <span class="badge badge-primary badge-pill">14</span> #}
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
  
  <div id="taskPage" class="col-md-8 h-100 mh-100 mb-3">
    {% block taskPage %}{% endblock %}
  </div>
</div>
{% endblock %}
